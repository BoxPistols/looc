{
  "include": ["src", "types"],
  "compilerOptions": {
    "lib": ["dom", "esnext"],
    "target": "es2017",
    "outDir": "./build",
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "declaration": true,
    "sourceMap": true,
    "rootDir": "./src",
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictPropertyInitialization": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "moduleResolution": "node",
    "baseUrl": ".",
    "esModuleInterop": true,
    "module": "esnext",
    "jsx": "react",
    "paths": {
      "/*.js": ["src/*.ts"],
      "/web_modules/*.js": [
        "src/web_modules/*.js",
        "node_modules/*",
        "node_modules/@types/*"
      ]
    }
  }
}
