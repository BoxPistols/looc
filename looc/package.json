{
  "name": "looc",
  "main": "build/index.cjs.js",
  "bin": "bin/cli.js",
  "module": "build/index.esm.js",
  "files": [
    "build",
    "bin"
  ],
  "scripts": {
    "build": "rollup -c && yarn copy-files",
    "build:win": "rollup -c && yarn copy-files:win",
    "copy-files": "cp -R html build && cp -R src/web_modules build",
    "install-modules": "yarn dlx snowpack --source pika",
    "copy-files:win": "xcopy html build\\html /i /e /h && xcopy \\src\\web_modules build\\web_modules /i /e /h"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^11.0.2",
    "@rollup/plugin-json": "^4.0.2",
    "@rollup/plugin-node-resolve": "^7.1.1",
    "@types/fs-extra": "^8.1.0",
    "@types/node": "^13.11.1",
    "@types/sade": "^1.6.0",
    "@types/serve-handler": "^6.1.0",
    "rollup-plugin-typescript2": "^0.27.0",
    "typescript": "^3.8.3"
  },
  "dependencies": {
    "execa": "^4.0.0",
    "fs-extra": "^9.0.0",
    "looc-loader": "workspace:looc-loader",
    "rollup": "^2.3.4",
    "sade": "^1.7.3",
    "serve-handler": "^6.1.2",
    "ts-morph": "^7.0.2",
    "tsx-ray": "^0.1.2"
  }
